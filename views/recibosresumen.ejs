<html>
<head>
    <meta charset="UTF-8">
    <title>DYM Ingenieros Constructores | Ticket</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div id="content-container">
<div id="recibo" style="margin-left:10px; padding-top:20px; padding-bottom:20px; font-size:16px;">
<button onclick="passPRNT()" class="btn btn-primary" style="margin-bottom: 20px">Imprimir</button>
<br>
<img src="/images/dym-logo.png" alt="" align="center">

<div id="printData">
<h2>DYM INGENIEROS CONSTRUCTORES SA DE CV</h2>
<h2>RECIBO ACARREOS</h2>

<div id="recibo-style" style="font-size: 20px;">
<% if(recibos.length > 0) {%>
  <h3><strong>Fecha: </strong><%= fecha %></h3>
  <h3><strong>Cami√≥n ID:</strong> <%= recibos[0].camion_id %></h3>
  <h3><strong>Placas:</strong> <%= recibos[0].placas %></h3>
  <h3><strong>Fletero:</strong> <%= recibos[0].prov_flete %></h3>
  <h3><strong>Capacidad:</strong><%=recibos[0].cantidad%> <%=recibos[0].unidad %></h3>
  <br>

  <table align="left" style="font-size: 20px;margin-bottom: 30px">
    <tr style="height:30px; padding-bottom: 20px; border-bottom: solid 1px black">
    <td width="60"><strong>No.</strong></td>
    <td width="150"><strong>Concepto</strong></td>
    <td width="150"><strong>Zona</strong></td>
    <td width="150"><strong>Banco</strong></td>
    <td width="150"><strong>Hora</strong></td>

   </tr>
   <% } %>
   <% if(acarreos.length > 0) {%>
  <% for(var i = 0; i < acarreos.length; i++) { %>
  <tr>
    <td width="60"><strong><%= i+1 %></strong></td>
    <td width="150"><strong><%=acarreos[i].nombre_concepto%></strong></td>
    <td width="150"><strong><%=acarreos[i].nombre_zona%></strong></td>
    <% if(!acarreos[i].prov_banco) { %>
    <td width="50"><strong>--</strong></td>
    <% } else { %>
    <td width="150"><strong><%=acarreos[i].prov_banco %></strong></td>
    <% } %>
    <td width="150"><strong><%=acarreos[i].hora%></strong></td>

   </tr>
  <% } %>
    <% } %>
  </table>
  <br>
  <br>
  <h3><strong>Resumen:</strong></h3>

  <table align="left" style="font-size: 20px; margin-bottom: 20px">
    <tr style="height:30px; padding-bottom: 20px; border-bottom: solid 1px black">
    <td width="60"><strong>No. Viajes</strong></td>
    <td width="150"><strong>Concepto</strong></td>
    <td width="150"><strong>Zona</strong></td>
    <td width="70"><strong>Cantidad</strong></td>
    <td width="150"><strong>Banco</strong></td>
   </tr>
   <% if(recibos.length > 0) {%>
  <% for(var i = 0; i < recibos.length; i++) { %>
  <tr>
    <td width="60"><strong><%= recibos[i].viajes %></strong></td>
    <td width="150"><strong><%=recibos[i].nombre_concepto%></strong></td>
    <td width="150"><strong><%=recibos[i].nombre_zona%></strong></td>
    <td width="70"><strong><%=recibos[i].total_cantidad%> <%=recibos[i].unidad %></strong></td>
    <% if(!recibos[i].prov_banco) { %>
    <td width="50"><strong>--</strong></td>
    <% } else { %>
    <td width="150"><strong><%=recibos[i].prov_banco %></strong></td>
    <% } %>
   </tr>
  <% } %>
    <% } %>
  </table>
  <br>
  <% if(total[0].total_viajes) {%>
  <h3><strong>No. Total Viajes:</strong> <%=total[0].total_viajes %></h3>

    <% } %>
</div>
<div height="200px" width="100px"></div>
<br>
</div>
</div>
<script src="/javascripts/script2.js" type="text/javascript" charset="utf-8" async defer></script>

</body>
</html>
