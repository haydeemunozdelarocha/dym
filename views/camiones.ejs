<html>
<head>
    <meta charset="UTF-8">
    <title>Camiones</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <% include ./partials/header.ejs %>
  <div id="content-container">
  <ul class="nav">
  <li><a href="/obras/nueva">Agregar</a></li>
</ul>
  <div id="table">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Camiones</div>

  <!-- Table -->
    <table class="table">
    <tr>
      <td>ID</td>
      <td>Fletero</td>
      <td>Placas</td>
      <td>Modelo</td>
      <td>Capacidad</td>
    </tr>
    <% for(var i=0; i<camiones.length; i++) {%>
    <tr>
      <td><%= camiones[i].camion_id %></td>
     <td><%= camiones[i].razon_social %></td>
      <td><%= camiones[i].placas %></td>
      <td><%= camiones[i].modelo %></td>
      <td><%= camiones[i].capacidad %></td>
      <td><a href="/camiones/editar/<%= camiones[i].camion_id %>"><span class="glyphicon glyphicon-edit"></span></a></td>
      <td><a href="/api/camiones/borrar/<%= camiones[i].camion_id %>?_method=DELETE"><span class="glyphicon glyphicon-remove-circle"></span></a></td>
       <% } %>
     </tr>
    </table>
  </div>
</div>
</body>
</html>
