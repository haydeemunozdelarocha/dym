<html>
<head>
  <meta charset="UTF-8">
  <title>Editar Camión</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
<% include ./partials/residentesheader.ejs %>
<div id="content-container">
  <form action="/api/camiones/<%= camion[0].id %>" method="post" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_method" value="put">
  <input type="text" value="<%= camion[0].id %>" name="id" id="id">
<div class="input-group">
  <label>Número:</label>
  <input type="text" class="form-control" name="numero" id="numero">
</div>

<div class="input-group">
  <label>Modelo:</label>
    <input type="text" class="form-control" value="<%= camion[0].modelo %>" placeholder="Residente" name="modelo" id="modelo">
</div>

<div class="input-group">
  <label>Placas:</label>
  <input type="text" class="form-control" value="<%= camion[0].placas %>" placeholder="Código" name="placas" id="placas">
</div>

<div class="input-group">
  <label>Capacidad:</label>
  <input type="text" class="form-control" value="<%= camion[0].capacidad %>" placeholder="Ciudad" name="capacidad" id="capacidad">
</div>

<br>
<div class="input-group">
<button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>
</div>
</body>
</html>
