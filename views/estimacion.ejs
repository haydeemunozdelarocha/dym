<html>
<head>
  <meta charset="UTF-8">
  <title>DYM Ingenieros Constructores | Estimación Nueva</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
<% include ./partials/residentesheader.ejs %>
<div id="content-container">
<div class="input-group">
  <label>Proveedor:</label>
  <input type="text" class="form-control" name="proveedor" id="proveedor" value="<%= estimacion[0].razon_social %>" disabled>
</div>
<div class="input-group">
  <label>Obra:</label>
  <input type="text" class="form-control" name="obra" id="obra" value="<%= estimacion[0].nombre_obra %>" disabled>
</div>
<div class="input-group">
  <label>Periódo:</label>
<input type="text" class="form-control" name="date1" id="date1" value="<%=estimacion[0].periodo_inicio %>" disabled>
<br>
<input type="text" class="form-control" name="date2" id="date2" value="<%= estimacion[0].periodo_final %>" disabled>
</div>
<br>
<div class="input-group">
  <label>Número:</label>
  <input type="text" class="form-control" name="numero" id="numero" value="<%= estimacion[0].numero %>" disabled>
</div>
<br>
<div class="form-group">
  <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Articulos</div>
     <table class="table" id="articulos">
       <tr>
         <td>
           Concepto
         </td>
        <td>
           Unidad
         </td>
         <td>
           Cantidad Presupuestada
         </td>
         <td>
           Acumulado Anterior
         </td>
         <td>
           Esta Estimación
         </td>
         <td>
           Acumulado Actual
         </td>
         <td>
           Por Ejercer
         </td>
         <td>
         Precio Unitario
         </td>
        <td>
         Importe
         </td>
       </tr>
       <% for (var i = 0; i < articulos.length ; i++ ) { %>
        <tr>
         <td>
           <p><%=articulos[i].nombre_concepto %></p>
         </td>
        <td>
        <p><%=articulos[i].unidad %></p>
         </td>
         <td>
           <p><%=articulos[i].cantidad_presupuestada %></p>
         </td>
         <td>
           <p><%=articulos[i].acumulado_anterior %></p>
         </td>
         <td>
         <p><%=articulos[i].esta_estimacion %></p>
         </td>
         <td>
            <p><%=articulos[i].acumulado_actual %></p>
         </td>
         <td>
           <p><%=articulos[i].por_ejercer %></p>
         </td>
          <td>
           <p>$<%=articulos[i].precio_unitario %></p>
         </td>
         <td>
          <p>$<%=articulos[i].importe %></p>
         </td>
       </tr>
       <% } %>
      </table>
     </div>
     </div>
     Subtotal: $<%= estimacion[0].subtotal %>
     <br>
     Retencion: $<%= estimacion[0].retencion %>
     <br>
     IVA: $<%= estimacion[0].iva %>
     <br>
     Total: $<%= estimacion[0].total %>
</div>
<script src="/javascripts/script.js" type="text/javascript" charset="utf-8" async defer></script>
</body>
</html>
