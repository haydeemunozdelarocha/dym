<html>
<head>
    <meta charset="UTF-8">
    <title>Acarreos</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <% include ./partials/residentesheader.ejs %>
  <div id="content-container">
  <ul class="nav">
</ul>
  <div id="table">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Acarreos</div>

  <!-- Table -->
    <table class="table">
    <tr>
    <td>ID</td>
      <td>Categoria</td>
      <td>Concepto</td>
      <td>Proveedor</td>
      <td>Recibo</td>
      <td>Fecha</td>
      <td>Flete</td>
    </tr>
    <% for(var i=0; i<acarreos.length; i++) {%>
    <tr>
    <td><%= acarreos[i].acarreo_id %></td>
      <td><%= acarreos[i].categoria %></td>
      <% if (acarreos[i].categoria === "material") { %>
     <td><%= acarreos[i].nombre_concepto %></td>
     <% } else { %>
     <td><%= acarreos[i].concepto_flete %></td>
     <% } %>
      <td><%= acarreos[i].razon_social %></td>
      <td><%= acarreos[i].recibo_id %></td>
      <td><%= acarreos[i].hora %></td>
      <td><%= acarreos[i].concepto_flete %></td>
      <td><a href="/edit/<%= acarreos[i].acarreo_id %>"><span class="glyphicon glyphicon-edit"></span></a></td>
     </tr>
    <% } %>
    </table>
  </div>
</div>
</body>
</html>
