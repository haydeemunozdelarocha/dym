<html>
<head>
    <meta charset="UTF-8">
    <title>DYM Ingenieros Constructores | Presupuestos</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<% if (usuario.categoria === "residente"){ %>
  <% include ./partials/residentesheader.ejs %>
<% }  else if (usuario.categoria === "administrador"){%>
   <% include ./partials/costosheader.ejs %>
<% } %>
  <div id="content-container">
  <p><h2>Presupuestos</h2></p>
    <div id="obra">
      <label for="obra">Obra:</label>
        <select class="form-control" onchange="getPresupuestos()" name="obra_id" id="obra_id" >
          <% for(var i=0; i<obras.length; i++) {%>
            <option value="<%= obras[i].id %>"><%= obras[i].nombre_obra %></option>
          <% } %>
        </select>
    </div>
  <div id="table">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Presupuesto</div>

  <!-- Table -->
    <table class="table">
    <tr>
      <td>ID</td>
      <td>Concepto</td>
      <td>Cantidad</td>
      <td>Unidad</td>
      <td>Zona</td>
      <td>Precio Unitario</td>
      <td>Total</td>
    </tr>
    <% for(var i=0; i<presupuestos.length; i++) {%>
    <tr>
      <td><%= presupuestos[i].presupuesto_id %></td>
     <td><%= presupuestos[i].nombre_concepto %></td>
      <td><%= presupuestos[i].cantidad %></td>
      <td><%= presupuestos[i].unidad %></td>
      <td><%= presupuestos[i].nombre_zona %></td>
      <td><%= presupuestos[i].precio_unitario %></td>
      <td><%= presupuestos[i].total %></td>
      <td><a href="/presupuestos/editar/<%= presupuestos[i].presupuesto_id %>"><span class="glyphicon glyphicon-edit"></span></a></td>
      <td><a data-method="delete" href="/api/presupuestos/borrar/<%= presupuestos[i].presupuesto_id %>?_method=DELETE"><span class="glyphicon glyphicon-remove-circle"></span></a></td>
       <% } %>
     </tr>
    </table>
  </div>
</div>
</div>
<script src="/javascripts/script.js" type="text/javascript" charset="utf-8" async defer></script>
</body>
</html>
