<html>
<head>
  <meta charset="UTF-8">
  <title>DYM Ingenieros Constructores | Nuevo Material</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
<% include ./partials/residentesheader.ejs %>
<div id="content-container">
<form action="/api/materiales" method="POST" enctype="application/x-www-form-urlencoded">
<div class="input-group">
  <div id="materiales">
  <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Materiales</div>

  <!-- Table -->
    <table class="table">
    <tr>
      <td>Concepto</td>
      <td>Proveedor</td>
      <td>Unidad</td>
      <td>Precio</td>
    </tr>
    <tr>
      <td><select class="form-control" name="concepto" id="concepto">
            <option value="">Concepto</option>
      <% for(var i=0; i<conceptos.length; i++) {%>
            <option value="<%= conceptos[i].conceptos_id %>"><%= conceptos[i].nombre_concepto %></option>
    <% } %>
    </select></td>
      <td><select class="form-control" name="proveedor_id" id="proveedor_id">
            <option value="">Proveedor</option>
      <% for(var i=0; i<proveedores.length; i++) {%>
            <option value="<%= proveedores[i].id %>"><%= proveedores[i].razon_social %></option>
    <% } %>
    </select>
    </td>
    <td>
      <select class="form-control" name="unidad" id="unidad">
        <option value="">Unidad</option>
        <option value="m">m</option>
        <option value="m2">m2</option>
        <option value="m3">m3</option>
        <option value="ton">ton</option>
      </select>
    </td>
    <td><input type="text" class="form-control" placeholder="Precio" name="precio" id="precio"></td>
     </tr>
    </table>
    </div>
  </div>
</div>
<br>

  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
</div>
</body>
</html>
